@{
    ViewBag.Title = "Öğrenci Portalı";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<div class="container">
    <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Kişisel Bilgiler</h4>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="about">
                <div class="row justify-content-center">
                    <div class="col-sm-4">
                        <div class="input-group form-control-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text mb-4">
                                    <i class="material-icons">face</i>
                                </span>
                            </div>
                            <div class="form-group bmd-form-group is-filled has-success">
                                <label for="exampleInput1" class="bmd-label-floating">İsim</label>
                                <input type="text" class="form-control" id="exampleInput1" name="firstname" required="" aria-required="true">
                            </div>
                        </div>
                        <div class="input-group form-control-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text mb-4">
                                    <i class="material-icons">face</i>
                                </span>
                            </div>
                            <div class="form-group bmd-form-group is-filled has-success">
                                <label for="exampleInput11" class="bmd-label-floating">Soy İsim</label>
                                <input type="text" class="form-control" id="exampleInput11" name="lastname" required="" aria-required="true">
                            </div>
                        </div>
                        <div class="input-group form-control-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text mb-4">
                                    <i class="material-icons">pin</i>
                                </span>
                            </div>
                            <div class="form-group bmd-form-group is-filled has-success">
                                <label for="exampleInput11" class="bmd-label-floating">Numara</label>
                                <input type="text" class="form-control" id="exampleInput11" name="number" required="" readonly="" aria-required="true">
                            </div>
                        </div>
                        <div class="input-group form-control-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text mb-4">
                                    <i class="material-icons">key</i>
                                </span>
                            </div>
                            <div class="form-group bmd-form-group is-filled has-success">
                                <label for="exampleInput11" class="bmd-label-floating">Şifre</label>
                                <input type="text" class="form-control" id="exampleInput11" name="password" required="" aria-required="true">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-unique"> <i class="material-icons">send</i></button>

    </div>
</div>

