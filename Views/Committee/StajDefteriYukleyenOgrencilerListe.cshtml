@{
    ViewBag.Title = "Komisyon Portalı";
    Layout = "~/Views/Shared/_LayoutDashboardCommittee.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Öğrenciler</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th>İsim</th>
                                        <th>Numara</th>
                                        <th>Öğretmen Id</th>
                                        <th class="text-center">Yönet</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.StudentProgressData2)
                                    {
                                        if (item.TeacherId != null && item.ProgressId == 5)
                                        {
                                            <tr>
                                                <td class="text-center">@item.Id</td>
                                                <td>@item.Name @item.Surname </td>
                                                <td>@item.No</td>
                                                <td>@item.TeacherId</td>
                                                <td class="td-actions text-center" id="editDel">
                                                    <a type="button" rel="tooltip" id="addTeacher" class="btn btn-link btn-primary btn-just-icon dangerous" data-toggle="tooltip" asp-controller="Committee" asp-action="ClearStudent" asp-route-stnId="@item.Id" title="Öğretmen Kaldır">
                                                        <i class="material-icons">dangerous</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                        else if (item.TeacherId == null && item.ProgressId == 4)
                                        {
                                            <tr>
                                                <td class="text-center">@item.Id</td>
                                                <td>@item.Name @item.Surname </td>
                                                <td>@item.No</td>
                                                <td>@item.TeacherId</td>
                                                <td class="td-actions text-center" id="editDel">
                                                    <a type="button" rel="tooltip" id="addTeacher" class="btn btn-link btn-success btn-just-icon add" data-toggle="tooltip" asp-controller="Committee" asp-action="OgrenciyeOgretmenAtama" asp-route-stnId="@item.Id" title="Öğretmen Ata">
                                                        <i class="material-icons">add</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>