@{
    ViewBag.Title = "Komisyon Portalı";
    Layout = "~/Views/Shared/_LayoutDashboardCommittee.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Öğretmenler</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th>İsim</th>
                                        <th>Soyisim</th>
                                        <th class="text-center">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.TeachersData)
                                    {
                                            <tr>
                                                <td class="text-center">@item.Id</td>
                                                <td>@item.Name  </td>
                                                <td>@item.Surname</td>
                                                <td class="td-actions text-center" id="addTeacher">
                                                    <a type="button" class="btn btn-outline-dark" asp-controller="Supervisor" asp-action="TeachertoStudent" asp-route-tId="@item.Id" value="@item.Id" >Öğretmen Ata</a>
                                                </td>
                                            </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
