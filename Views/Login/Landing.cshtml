@{
    ViewBag.Title = "Giriş Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-full-page">
    <div class="page-header login-page header-filter" filter-color="green" style="background-image: url('../../assets/img/login.jpg'); background-size: cover; background-position: top center;">


        <div class="container">
            <div class="row">
                <div class="col">
                    <span class="d-inline"> <h2>Kocaeli Üniversitesi Staj Başvuru Ve Takip Sistemine Hoş Geldiniz.</h1></span>
                </div>

                <div class="col-md">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center">Giriş Yapmak İçin</h5>
                            <a class="btn btn-secondary d-flex justify-content-center" asp-area="" asp-controller="Login" asp-action="Index">
                                <i class=" pt-2 material-icons">fingerprint</i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card d-flex">
                        <div class="card-body">
                            <h5 class="card-title text-center">Kayıt olmak için</h5>
                            <a class="btn btn-secondary d-flex justify-content-center mt-2" asp-area="" asp-controller="SignUp" asp-action="Index">  <i class="pt-2 material-icons">person_add</i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>