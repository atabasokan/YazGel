@model YazGel.Models.Student
@{
    ViewBag.Title = "Kayıt Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-full-page">
    <div class="page-header register-page header-filter" filter-color="green" style="background-image: url('../../assets/img/register.jpg')">


        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-auto mr-auto">
                    <div class="card card-signup">
                        <h2 class="card-title text-center">Kayıt Ol</h2>
                        <h3 style="color:red; place-self:center;">@ViewBag.Error</h3>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-5 ml-auto">

                                    <div class="info info-horizontal">
                                        <div class="icon icon-primary">
                                            <i class="material-icons">code</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Belgelere Erişim</h4>
                                            <p class="description">
                                                Başvuru belgelerini görüntüleyebilir onları indirebilirsin
                                            </p>
                                        </div>
                                    </div>

                                    <div class="info info-horizontal">
                                        <div class="icon icon-rose">
                                            <i class="material-icons">timeline</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Süreç</h4>
                                            <p class="description">
                                                Başvuru sürecini anlık olarak takip edebilirsin
                                            </p>
                                        </div>
                                    </div>

                                    <div class="info info-horizontal">
                                        <div class="icon icon-info">
                                            <i class="material-icons">group</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Öğretmenler ve Komisyon</h4>
                                            <p class="description">
                                                İlgili komisyon ve/veya ilgili öğretmen belgelerini görüntüleyebilir.
                                            </p>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-5 mr-auto">

                                    @using (Html.BeginForm("Index", "SignUp", FormMethod.Post, new { enctype = "multipart/form-daya" }))
                                    {
                                        @*isim*@
                                        <div class="form-group has-default">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">badge</i>
                                                    </span>
                                                </div>
                                                <input asp-for="Name" name="Name" id="Name" type="text" class="form-control" placeholder="İsim.." autocomplete="off">
                                            </div>
                                        </div>
                                        @*soyisim*@
                                        <div class="form-group has-default">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">assignment</i>
                                                    </span>
                                                </div>
                                                <input asp-for="Surname" name="Surname" id="Surname" type="text" class="form-control" placeholder="Soysim.." autocomplete="off">
                                            </div>
                                        </div>
                                        @*cinsiyet*@
                                        <div class="input-group input-group-static m-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">wc</i>
                                                </span>
                                            </div>
                                            <select asp-for="Gender" class="form-control dropdown-toggle" id="Gender" title="Cinsiyet" autocomplete="off">
                                                <option disabled selected active>Cinsiyet</option>
                                                <option value="1">Kadın</option>
                                                <option value="0">Erkek</option>
                                            </select>
                                        </div>
                                        @*Mail*@
                                        <div class="form-group has-default">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">email</i>
                                                    </span>
                                                </div>
                                                <input name="toEmail" id="toEmail" type="text" class="form-control" placeholder="Mail Adresi.." autocomplete="off">
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <input class="btn btn-primary btn-round mt-4" type="submit" value="Kayıt Ol" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>
<script type="text/javascript">
</script>