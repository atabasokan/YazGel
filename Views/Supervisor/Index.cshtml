                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Öğrenciler</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th>İsim - Soy İsim</th>
                                        <th>Numara</th>
                                        <th>Şifre</th>
                                        <th class="text-center">Yönet</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.studentData)
                                    {
                                        <tr>
                                            <td class="text-center">@item.Id</td>
                                            <td>@item.Name @item.Surname</td>
                                            <td>@item.No</td>
                                            <td>@item.Pass</td>
                                            <td class="td-actions text-center">
                                                <a type="button" rel="tooltip" class="btn btn-success" data-toggle="modal" data-target="#exampleModalLong3" title="Düzenle">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                                <a type="button" rel="tooltip" class="btn btn-danger" data-toggle="tooltip" title="Sil" href="/Supervisor/DeleteStudent/@item.Id">
