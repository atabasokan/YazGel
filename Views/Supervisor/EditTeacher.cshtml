@{
    ViewBag.Title = "Yönetici Portalı";
    Layout = "~/Views/Shared/_LayoutDashboardSupervisor.cshtml";
}
@model YazGel.Models.Teacher

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Öğretmenler</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th>İsim</th>
                                        <th>Numara</th>
                                        <th>Şifre</th>
                                        <th class="text-center">Yönet</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.TeachersData)
                                    {
                                        <tr>
                                            <td class="text-center">@item.Id</td>
                                            <td>@item.Name @item.Surname </td>
                                            <td>@item.No</td>
                                            <td>@item.Pass</td>
                                            <td class="td-actions text-center" id="editDel">
                                                <a type="button" id="modalShow" class="btn btn-link btn-warning btn-just-icon edit" data-toggle="modal" data-target="#exampleModalLong" title="Düzenle">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                                <a type="button" rel="tooltip" id="delButton" class="btn btn-link btn-danger btn-just-icon remove" data-toggle="tooltip" title="Sil" href="/Supervisor/DeleteTeacher/@item.Id">
                                                    <i class="material-icons">close</i>
                                                </a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                            <div class="form-group has-default">
                                <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            @using (Html.BeginForm("EditTeacher", "Supervisor", FormMethod.Post, new { enctype = "multipart/form-daya" }))
                                            {
                                                <div class="modal-body">
                                                    <label for="Name" class="bmd-label-floating">Ad</label>
                                                    <input asp-for="Name" type="password" class="form-control" id="Name" required="" aria-required="true">

                                                    <label for="Surname" class="bmd-label-floating">Soyad</label>
                                                    <input asp-for="Surname" type="password" class="form-control" id="Surname" required="" aria-required="true">

                                                    <label for="No" class="bmd-label-floating">No</label>
                                                    <input asp-for="No" type="password" class="form-control" id="No" required="" aria-required="true">

                                                    <label for="Pass" class="bmd-label-floating">Şifre</label>
                                                    <input asp-for="Pass" type="password" class="form-control" id="Pass" required="" aria-required="true">

                                                    <label for="Type" class="bmd-label-floating">Rol</label>
                                                    <select asp-for="Type" class="form-control dropdown-toggle" id="Type" title="Cinsiyet" autocomplete="off">
                                                        <option disabled selected active></option>
                                                        <option value="false">Öğretmen</option>
                                                        <option value="true">Komisyon</option>
                                                    </select>

                                                    <label for="Gender" class="bmd-label-floating">Cinsiyet</label>
                                                    <select asp-for="Gender" class="form-control dropdown-toggle" id="Gender" title="Cinsiyet" autocomplete="off">
                                                        <option disabled selected active>Cinsiyet</option>
                                                        <option value="1">Kadın</option>
                                                        <option value="0">Erkek</option>
                                                    </select>
                                                    <input type="password" class="form-control" id="newPass" required="" aria-required="true">
                                                </div>
                                                <div class="modal-footer">
                                                    <input type="button" class="btn btn-outline-dark" id="btn_show" onclick="myFunction()" value="Şifre Gör">
                                                    <input type="submit" class="btn btn-outline-dark" value="Kaydet" />
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>