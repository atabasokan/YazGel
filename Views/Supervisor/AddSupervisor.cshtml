        <div class="tab-content">
            <div class="tab-pane active" id="about">
                <div class="row justify-content-center">
                    <div class="col-sm-4">
                        @using (Html.BeginForm("AddSupervisor", "Supervisor", FormMethod.Post, new { enctype = "multipart/form-daya" }))
                        {
                            <div class="form-group has-default">
                                <div class="input-group form-control-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text mb-4">
                                            <i class="material-icons">face</i>
                                        </span>
                                    </div>
                                    <div class="form-group bmd-form-group is-filled has-success">
                                        <label for="exampleInput1" class="bmd-label-floating">İsim</label>
                                        <input asp-for="Name" type="text" class="form-control" id="exampleInput1" name="Name" required="" aria-required="true">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group has-default">
                                <div class="input-group form-control-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text mb-4">
                                            <i class="material-icons">face</i>
                                        </span>
                                    </div>
                                    <div class="form-group bmd-form-group is-filled has-success">
                                        <label for="Surname" class="bmd-label-floating">Soy İsim</label>
                                        <input asp-for="Surname" type="text" class="form-control" id="Surname" name="Surname" required="" aria-required="true">
                                    </div>
                                </div>
                            </div>
                            <div class="input-group input-group-static form-control-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-4">
                                        <i class="material-icons">wc</i>
                                    </span>
                                </div>

                                <select asp-for="Gender" class="form-control dropdown-toggle" id="exampleFormControlSelect2" title="Cinsiyet" autocomplete="off">
                                    <option disabled selected active>Cinsiyet</option>
                                    <option value="1">Kadın</option>
                                    <option value="0">Erkek</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-center">
                                <input type="submit" class="btn btn-outline-dark" value="Kaydet" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



