@model YazGel.Models.Supervisor
@{
    ViewBag.Title = "Yönetici Portalı";
    Layout = "~/Views/Shared/_LayoutDashboardSupervisor.cshtml";
}

<h1>Öğretmen Ekleme</h1>


<div class="container">
    <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Yönetici Ekle</h4>
    </div>
